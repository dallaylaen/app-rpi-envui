    <script src="https://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.js"></script>
    <script type="text/javascript" src="js/Chart.bundle.js"></script>

    <script type="text/javascript" src="js/core.js"></script>
</head>


<body>

<table width="100%">
    <tr><td width="90%" style="white-space: nowrap;" >

        <div class="menuBackground">
            <div class="center myMenu">
                <ul class="dropDownMenu">
                    <li><a href="/">Home</a></li>
                    <li><a href="/stats">Statistics</a>
                        <ul>
                            <li><a href="http://html-tuts.com/?p=9961">HTML</a></li>
                            <li><a href="http://html-tuts.com/?p=9961">CSS</a></li>
                            <li><a href="http://html-tuts.com/?p=9961">JS</a></li>
                        </ul>
                    </li>
                    <li class="menuHeader">About
                        <ul>
                            <li><a href="https://github.com/stevieb9" target="_blank">Author Github</a></li>
                            <li><a href="https://metacpan.org/author/STEVEB" target="_blank">Author CPAN</a></li>
